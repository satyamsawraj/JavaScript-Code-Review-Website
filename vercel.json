{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Backend/src/server.js"
    }
  ],
  "builds": [
    {
      "src": "Backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "installCommand": "npm install --prefix=./Backend && npm install --prefix=./Frontend",
  "buildCommand": "npm run build --prefix=./Frontend",
  "devCommand": "npm run dev --prefix=./Frontend"
}